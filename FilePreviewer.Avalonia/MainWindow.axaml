<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:FilePreviewer.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FilePreviewer.Avalonia.MainWindow"
        Title="FilePreviewer.Avalonia">
    <StackPanel Margin="10" Spacing="5">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button x:Name="TestLoadImageButton" Content="Test Load Image"/>
            <Button x:Name="TestShowPropertiesButton" Content="Test Show Properties"/>
        </StackPanel>
        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,0" Height="300" VerticalAlignment="Stretch">
            <ContentControl x:Name="MainContentArea" />
        </Border>
    </StackPanel>

</Window>
