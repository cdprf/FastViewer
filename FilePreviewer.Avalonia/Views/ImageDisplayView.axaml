<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FilePreviewer.Avalonia.Views.ImageDisplayView">
    <Grid>
        <Image x:Name="DisplayedImage" Stretch="Uniform" Margin="5" />
        <TextBlock x:Name="ErrorTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" IsVisible="False"/>
    </Grid>
</UserControl>
